{
    "name": "@lousy-agents/cli",
    "version": "1.0.2",
    "description": "CLI scaffolding tool that sets up projects with structure, instructions, and feedback loops for AI coding assistants",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zpratt/lousy-agents.git"
    },
    "author": "zpratt",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/zpratt/lousy-agents/issues"
    },
    "homepage": "https://github.com/zpratt/lousy-agents#readme",
    "keywords": [
        "cli",
        "scaffolding",
        "ai",
        "copilot",
        "github-copilot",
        "coding-assistant",
        "vibe-coding"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "files": [
        "dist",
        "ui",
        "api",
        "cli"
    ],
    "bin": {
        "cli": "dist/index.js",
        "lousy-agents": "dist/index.js",
        "lousy-agents-mcp": "dist/mcp-server.js"
    },
    "scripts": {
        "dev": "tsx src/index.ts",
        "build": "rspack build --config rspack.config.ts && chmod +x dist/index.js dist/mcp-server.js",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "lint:workflows": "actionlint",
        "lint:yaml": "yamllint ."
    },
    "dependencies": {
        "@github-actions-workflow-ts/lib": "2.4.0",
        "@modelcontextprotocol/sdk": "1.27.1",
        "@octokit/rest": "22.0.1",
        "c12": "3.3.3",
        "citty": "0.2.1",
        "consola": "3.4.2",
        "eta": "4.5.1",
        "remark": "15.0.1",
        "remark-parse": "11.0.0",
        "unist-util-visit": "5.1.0",
        "yaml": "2.8.2",
        "zod": "4.3.6"
    },
    "devDependencies": {
        "@biomejs/biome": "2.4.4",
        "@rspack/cli": "1.7.6",
        "@rspack/core": "1.7.6",
        "@types/chance": "1.1.7",
        "@types/mdast": "4.0.4",
        "@types/node": "25.3.2",
        "chance": "1.1.13",
        "testcontainers": "11.12.0",
        "tsx": "4.21.0",
        "typescript": "5.9.3",
        "vitest": "4.0.18",
        "whatwg-fetch": "3.6.20"
    }
}
