{
    "name": "@lousy-agents/cli",
    "version": "1.0.0",
    "description": "CLI scaffolding tool that sets up projects with structure, instructions, and feedback loops for AI coding assistants",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zpratt/lousy-agents.git"
    },
    "author": "zpratt",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/zpratt/lousy-agents/issues"
    },
    "homepage": "https://github.com/zpratt/lousy-agents#readme",
    "keywords": [
        "cli",
        "scaffolding",
        "ai",
        "copilot",
        "github-copilot",
        "coding-assistant",
        "vibe-coding"
    ],
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "bin": {
        "lousy-agents": "./dist/index.js",
        "lousy-agents-mcp": "./dist/mcp-server.js"
    },
    "scripts": {
        "dev": "tsx src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "vitest run",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "lint:workflows": "actionlint",
        "lint:yaml": "yamllint ."
    },
    "dependencies": {
        "@github-actions-workflow-ts/lib": "2.3.0",
        "@modelcontextprotocol/sdk": "1.25.3",
        "c12": "3.3.3",
        "citty": "0.2.0",
        "consola": "3.4.2",
        "eta": "4.5.0",
        "yaml": "2.8.2",
        "zod": "4.3.6"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.12",
        "@types/chance": "1.1.7",
        "@types/node": "24.10.4",
        "chance": "1.1.13",
        "tsx": "4.21.0",
        "typescript": "5.9.3",
        "vitest": "4.0.18",
        "whatwg-fetch": "3.6.20"
    }
}
