{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start App Locally",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "serverReadyAction": {
                "pattern": "- Local:\\s+http://localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}